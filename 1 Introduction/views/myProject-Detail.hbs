      <div class="blog">
        <h2>ADD MY PROJECT</h2>
       <div class="form-project"> 
        <form="container-form" action="/add-project" method="POST">
            
              <div>
                <label for="input-project-name"> Name Project</label>
                <input id="input-project-name" name="name">
              </div>

              <div class="date">
                <div>
                <label for="input-project-start-date"> Start Date</label> 
                <input id="input-project-start-date" type="date" name="startDate">
               </div>
               
               <div>               
                <label for="input-project-end-date"> End Date </label>
                <input id="input-project-end-date" type="date" name="endDate">
              </div>
              </div>
              
              <div>
              <label>Technologies</label>
              <div class="checkbox-form">
                <div class="checkbox-first-form">
                    <label class="container">
                    <input type="checkbox" value="0" class="checkbox">
                    <span class="checkmark"></span>
                     NodeJS
                    </label>
                    <label class="container">
                    <input type="checkbox" value="1"class="checkbox">
                    <span class="checkmark"></span>
                     ReactJS
                    </label>
                  </div>
                <div class="checkbox-second-form">
                     <label class="container">
                    <input type="checkbox" value="3" class="checkbox">
                     <span class="checkmark"></span>
                     NextJS
                    </label>
                    <label class="container">
                      <input type="checkbox" value="2" class="checkbox">
                      <span class="checkmark"></span>
                       TypeScript
                    </label>
              </div> 
            </div>
          </div>

              <div>
                <label for="message">Description</label>
                <textarea id="message" name="message"></textarea>
              </div>

              <div>
              <label>Upload Image</label>
            <div class="input-project-image-group">
              <label for="input-project-image"></label>
                <span><img src="public/assetts/img/file.png" alt="file"> </span>
              <input type="file" id="input-project-image">
            </div>
          </div>
          <div class="button-group">
            <button type="submit">submit</button>
        </div>
        </form>
       </div>
      </div>

<div id="contents" class="project-list">

    </div>
